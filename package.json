{
    "name": "swifter",
    "displayName": "Swifter",
    "description": "Swift language support for Visual Studio Code.",
    "icon": "res/images/swift-logo.png",
    "author": {
        "name": "Carl Chen",
        "email": "ccf.developer@gmail.com",
        "url": "https://github.com/webfrogs"
    },
    "license": "MIT",
    "version": "0.0.1",
    "publisher": "nswebfrog",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:swift"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Swifter options",
            "properties": {
                "swifter.languageServerPath": {
                    "type": "string",
                    "default": "/usr/local/bin/swift-nest",
                    "description": "Path to swift language server used by swifter extension."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vscode-languageclient": "^3.5.1"
    }
}
